{
  "name": "sunday-paper",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/public/output.css --watch",
    "dev:esbuild": "esbuild --bundle src/app.tsx --format=esm --watch --outfile=dist/_worker.js",
    "dev:wrangler": "wrangler pages dev dist --live-reload --compatibility-date=2023-08-04",
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/public/output.css && esbuild --bundle src/app.tsx --format=esm --outfile=dist/_worker.js",
    "deploy": "wrangler pages publish dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevin-wynn/sunday-paper.git"
  },
  "author": "Kevin Wynn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevin-wynn/sunday-paper/issues"
  },
  "homepage": "https://github.com/kevin-wynn/sunday-paper#readme",
  "dependencies": {
    "@hono/node-server": "^1.1.1",
    "esbuild": "^0.18.17",
    "hono": "^3.3.4",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "wrangler": "^3.4.0"
  }
}
